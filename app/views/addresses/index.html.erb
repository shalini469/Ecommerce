<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<p id="notice"><%= notice %></p>
<body class="body-bg">
<div class="table-responsive"
<h1>Addresses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Type of address</th>
      <th>Line1</th>
      <th>Line2</th>
      <th>Street</th>
      <th>Landmark</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.type_of_address %></td>
        <td><%= address.line1 %></td>
        <td><%= address.line2 %></td>
        <td><%= address.street %></td>
        <td><%= address.landmark %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.pincode %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>
<br>

<%= link_to 'New Address', new_address_path %>
