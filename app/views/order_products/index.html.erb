
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<p id="notice"><%= notice %></p>
<body class="body-bg">
<div class="table-responsive">
<h1>Order Products</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Qty</th>
      <th>Product</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.qty %></td>
        <td><%= order_product.product_id %></td>
        <td><%= order_product.order_id %></td>
        <td><%= link_to 'Show', order_product %></td>
        <td><%= link_to 'Edit', edit_order_product_path(order_product) %></td>
        <td><%= link_to 'Destroy', order_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>
<br>

<%= link_to 'New Order Product', new_order_product_path %>
